<Group description="Backgrounds">
  {{! Used in: --body-background }}
  {{variable "body.background" description="Header Background" type="background" value="$(color) none repeat scroll top center" color="$(body.background.color)"}}
  {{! Used in: --body-background-color }}
  {{variable "body.background.color" description="Header color" type="color" value="#222"}}
  {{! Used in: --bg-body }}
  {{variable "bg.body" description="Body background color" type="color" value="#fff"}}
  {{! Used in: --bg-post }}
  {{variable "bg.post" description="Post background color" type="color" value="#e0e0e0"}}
  {{! Used in: --bg-sidebar }}
  {{variable "bg.sidebar" description="Sidebar Background Color" type="color" value="#fff"}}
</Group>
