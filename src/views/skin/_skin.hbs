Variables b:skin
@author zkreations
@docs https://bloggercode-blogconnexion.blogspot.com/2014/06/tag-b-skin-b-template-skin.html
--}}
<b:if cond="!data:view.isLayoutMode">
  {{!-- Skin (for Customization Mode) --}}
  <b:skin><![CDATA[
    /*!
      * Name      : {{name}}
      * Version   : {{version}}
      * License   : {{license}}
      *//*!

    Admin
    =====================
    {{> setAdmin}}

    General
    =====================
    {{> setGeneral}}

    Translatable strings
    =====================
    {{> Translatable}}

    Customization
    =====================
    # Mandatory variable to enable dynamic layout
    {{variable "keycolor" type="color" value="#2196f3"}}
    
    {{> Background}}
    {{> Color}}
    {{> Font}}
    {{> Hack}}

    Skin CSS variables
    =====================*/
    :root {
    {{#each skinVars}}
      --{{@key}}: {{this}};
    {{/each}}
    }

    /*
    All styles
    =====================*/
    {{asset '/dist/css/main'}}

    /*
    Your custom styles
    =====================*/
  ]]></b:skin>
<b:else/>
  {{!-- Template skin (for Layout Mode) --}}
  <b:template-skin><![CDATA[
    {{asset '/dist/css/admin.min.css'}}
  ]]></b:template-skin>
</b:if>
