{{!-- Offcanvas controls --}}
<input class='offcanvas-control' type='checkbox' name="offcanvas" id='show-sidebar'/>
<input class='offcanvas-control' type='checkbox' name="offcanvas" id='show-search'/>
{{!-- Offcanvas --}}
<div class='offcanvas layout-section'>
  {{!-- Sidebar --}}
  <b:section id='sidebar' class='sidebar' ads='true'>
    <b:widget type='PageList' title=''/>
    <b:widget type='Label' title='Labels'/>
  </b:section>
  {{!-- Search --}}
  <form class='big-search' expr:action='data:blog.searchUrl' method='get' tabindex='-1'>
    <input class='big-search-input' autocomplete='off' name='q' expr:placeholder='data:view.search.query.escaped ?: data:messages.search' spellcheck='false' type='text'/>
  </form>
</div>
